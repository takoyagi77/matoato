	\newpage%
	\null%
	\ifnum \value{papernum} = 1%
		\begin{flushleft}%
			{\Large \@date 卒業論文}%
		\end{flushleft}%
		\vspace{15truemm}%
		\begin{center}%
			{\Huge \@title}%
		\end{center}%
		\vspace{140truemm}%
		\begin{flushright}%
			{\large 報告者：\@studentID \ \@author \par%
			担当教員：小坂　学　教授 \par 近畿大学理工学部機械工学科制御工学研究室}
		\end{flushright}%
		\vspace{1truemm}%
		\thispagestyle{empty}
		\newpage
		\pagenumbering{roman}
		\tableofcontents
		\newpage
		\pagenumbering{arabic}
	\fi
	\ifnum \value{papernum} = 2%
		\begin{center}%
			\vspace*{10zh}
			{\fontsize{36pt}{0pt}\selectfont 修　士　論　文 \par}%
			{\fontsize{20pt}{0pt}\selectfont \vspace{1zh} \@date \par}%
			\vfill
